

.scroll-box{
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    position: fixed;
}

.scroll-ul-box{
    box-sizing: border-box;
    position: relative;
    width: 48%;
    padding: 0 1%;
    margin: 0 1%;
    display: inline-block;
    top: 0;
    vertical-align: top;
}

.sroll-image{
    box-sizing: border-box;
    width: 100%;
    /* min-height: 200rpx; */
    background-size: cover;
    background-repeat: no-repeat;
}

.loading-block{
    box-sizing: border-box;
    width: 100%;
    height: 80rpx;
    position: relative;
    display: flex;
    display: -webkit-flex;
    justify-content: center;
    align-items: center;
}

.image-loading{
    box-sizing: border-box;
    width: 80rpx;
    height: 80rpx;
    background-repeat: no-repeat;
    background-size: cover;
    overflow: hidden;
}

.modal-show-image{
    box-sizing: border-box;
    position: fixed;
    height: 100%;
    width: 100%;
    background-color: rgba(0,0,0, .3);
    z-index: 100;
    display: block;
}

.modal-show-image .modal-container{
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    /* width:  */
    display: flex;
    display: -webkit-flex;
    justify-content: center;
    align-items: center;
}
.modal-show-image .image-box{
    box-sizing: border-box;
    width: 280px;
    border-radius: 6px;
}
.modal-show-image .show-image{
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    background-repeat: no-repeat;
    background-size: cover;
    border-radius: 6px;
}